<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.chris.holdall.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Show toast"
            android:id="@+id/test1"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Picasso"
            android:id="@+id/test2"
            android:layout_weight="1"
            android:textColor="@android:color/holo_red_dark"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Palindrome"
            android:id="@+id/test3"
            android:layout_weight="1"
            android:textDirection="firstStrong"
            android:textStyle="italic"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Fibonnaci"
            android:id="@+id/test4"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="test 5"
            android:id="@+id/test5"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Calculatrice"
            android:id="@+id/test6"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="FalseFlickr"
            android:id="@+id/test7"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="test 8"
            android:id="@+id/test8"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="test 9"
            android:id="@+id/test9"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="test 10"
            android:id="@+id/test10"
            android:layout_weight="1"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@android:color/holo_blue_light"/>

    </LinearLayout>




</LinearLayout>
